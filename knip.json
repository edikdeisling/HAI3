{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/screensets/**"]
    },
    "packages/cli": {
      "ignore": ["templates/**"]
    }
  },
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/dist/**",
    "**/node_modules/**",
    "**/templates/**",
    "presets/**",
    "eslint-plugin-local/**",
    "**/*.config.{ts,js,cjs,mjs}",
    "vite.config.ts",
    ".eslintrc.cjs"
  ],
  "ignoreDependencies": [
    "@types/*",
    "@eslint/js",
    "eslint-plugin-react-hooks",
    "eslint-plugin-unused-imports",
    "globals",
    "typescript-eslint",
    "lodash",
    "lucide-react"
  ],
  "ignoreBinaries": [
    "dot"
  ],
  "ignoreExportsUsedInFile": true
}
