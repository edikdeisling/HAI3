{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/screensets/**"]
    },
    "packages/cli": {
      "ignore": ["templates/**", "template-sources/**"]
    },
    "packages/uikit": {
      "ignoreDependencies": ["@hookform/resolvers"]
    }
  },
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/dist/**",
    "**/node_modules/**",
    "**/templates/**",
    "**/template-sources/**",
    "eslint-plugin-local/**",
    "**/*.config.{ts,js,cjs,mjs}",
    "vite.config.ts",
    ".eslintrc.cjs"
  ],
  "ignoreDependencies": [
    "@types/*",
    "lucide-react",
    "@hai3/depcruise-config/*"
  ],
  "ignoreBinaries": [
    "dot"
  ],
  "ignoreExportsUsedInFile": true
}
